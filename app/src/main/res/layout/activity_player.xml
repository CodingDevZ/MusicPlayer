<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tomy_.musicplayer.Player"
    android:background="?attr/backgroundcolor">

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="&lt;&lt;"
        android:id="@+id/btnBack"
        android:layout_alignTop="@+id/btnPrev"
        android:layout_toRightOf="@+id/btnPrev"
        android:layout_toEndOf="@+id/btnPrev" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="||"
        android:id="@+id/btnPlay"
        android:layout_alignTop="@+id/btnBack"
        android:layout_toRightOf="@+id/btnBack"
        android:layout_toEndOf="@+id/btnBack" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text=">>"
        android:id="@+id/btnForw"
        android:layout_alignTop="@+id/btnPlay"
        android:layout_toLeftOf="@+id/btnNext"
        android:layout_toStartOf="@+id/btnNext" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="|&lt;"
        android:id="@+id/btnPrev"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text=">|"
        android:id="@+id/btnNext"
        android:layout_alignTop="@+id/btnForw"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
